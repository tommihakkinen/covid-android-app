<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="70dp"
        android:text="Koronatapauksia Suomessa"
        android:background="@color/blue"
        android:textSize="40sp"
        android:layout_weight="2"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/casesView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/deathsView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/vaccinatedView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/blue"/>

    <Button
        android:id="@+id/button"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Hae oman kuntasi tartunnat"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/blue"
        android:onClick="getDataByLocation"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="Koronatilanteet sairaanhoitopiireittÃ¤in"
        android:backgroundTint="@color/blue"
        android:onClick="changeActivity"/>


</LinearLayout>